{
  "manifest_version": 3,
  "name": "DeleteMixList",
  "version": "1.0.0",
  "description": "YouTubeのURLからミックスリスト部分を削除してリダイレクトします。",
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DeleteMixList",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],

  "author": "yamada"

}
