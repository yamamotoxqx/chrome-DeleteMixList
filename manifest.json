{
  "manifest_version": 3,
  "name": "ガチアンチミックスリスト",
  "version": "0.1",
  "description": "YouTubeのURLからミックスリスト部分を削除してリダイレクトします。",
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "16": "images/icon128.jpeg",
    "32": "images/icon128.jpeg",
    "48": "images/icon128.jpeg",
    "128": "images/icon128.jpeg"
  }
}, 
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}